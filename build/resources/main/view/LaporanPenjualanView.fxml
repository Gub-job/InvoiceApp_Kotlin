<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0"
    style="-fx-background-color: #f8fafc; -fx-padding: 20;"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.LaporanPenjualanController">
    <children>
        <Label text="Laporan Penjualan">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Label text="Tanggal Mulai:" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="startDatePicker"/>
            <Label text="Tanggal Akhir:" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="endDatePicker"/>

            <Label text="Filter Produk:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="produkFilterComboBox" prefWidth="200"/>

            <Button text="Cari" onAction="#onCariClicked" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Cetak" onAction="#onCetakClicked" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
        <TableView fx:id="tableView" prefHeight="400.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="kolomTanggal" prefWidth="100.0" text="Tanggal"/>
                <TableColumn fx:id="kolomNomor" prefWidth="150.0" text="Nomor Dokumen"/>
                <TableColumn fx:id="kolomPelanggan" prefWidth="150.0" text="Pelanggan"/>
                <TableColumn fx:id="kolomNamaProduk" prefWidth="200.0" text="Nama Produk"/>
                <TableColumn fx:id="kolomQty" prefWidth="70.0" text="Qty"/>
                <TableColumn fx:id="kolomHarga" prefWidth="100.0" text="Harga"/>
                <TableColumn fx:id="kolomTotal" prefWidth="100.0" text="Total"/>
                <TableColumn fx:id="kolomPpn" prefWidth="100.0" text="PPN"/>
                <TableColumn fx:id="kolomTotalDenganPpn" prefWidth="120.0" text="Total + PPN"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox alignment="TOP_RIGHT" spacing="5.0">
            <children>
                <!-- Total labels can be added here if needed -->
            </children>
            <VBox.margin>
                <Insets right="10.0" top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>