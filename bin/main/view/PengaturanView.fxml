<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" style="-fx-padding: 30; -fx-background-color: #f8fafc;"
   xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="controller.PengaturanController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"
         text="Pengaturan Perusahaan" />
      <GridPane hgap="10" vgap="15">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="170.0" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <!-- Tarif Pajak -->
         <Label text="Default PPN Rate (%):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <TextField fx:id="taxRateField" prefWidth="100.0" GridPane.columnIndex="1"
            GridPane.rowIndex="0" />

         <!-- Singkatan Perusahaan -->
         <Label text="Singkatan Perusahaan:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <TextField fx:id="singkatanField" promptText="Contoh: PBM" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <!-- Format Invoice -->
         <Label text="Format Nomor Invoice:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <TextField fx:id="invoiceFormatField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <!-- Format Proforma -->
         <Label text="Format Nomor Proforma:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
         <TextField fx:id="proformaFormatField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <children>
               <Label style="-fx-font-size: 11px; -fx-text-fill: #64748b;"
                  text="Placeholder yang tersedia:" />
               <Label style="-fx-font-size: 11px; -fx-text-fill: #64748b; -fx-font-style: italic;"
                  text="{nomor:3}, {divisi}, {produk}, {bulan_romawi}, {tahun}, {singkatan}" />
            </children>
         </VBox>
      </GridPane>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button fx:id="simpanButton" onAction="#onSimpanClicked"
               style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"
               text="Simpan Pengaturan" />
         </children>
      </HBox>
   </children>
</VBox>