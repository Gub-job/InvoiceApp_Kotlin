<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DaftarInvoiceController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Daftar Invoice">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="buatBaruBtn" mnemonicParsing="false" text="Buat Invoice Baru" />
        <Button fx:id="refreshBtn" mnemonicParsing="false" text="Refresh Data" />
        <Label text="Dari:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="startDatePicker"/>
        <Label text="Sampai:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="endDatePicker"/>
    </HBox>
    <TableView fx:id="invoiceTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="kolomId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="kolomNomor" prefWidth="150.0" text="Nomor Invoice" />
            <TableColumn fx:id="kolomTanggal" prefWidth="100.0" text="Tanggal" />
            <TableColumn fx:id="kolomPelanggan" prefWidth="200.0" text="Pelanggan" />
            <TableColumn fx:id="kolomTotal" prefWidth="150.0" text="Total" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>