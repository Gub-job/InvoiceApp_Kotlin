<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ProdukController">

    <center>
        <TableView fx:id="table" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="kolomNama" text="Nama Produk" prefWidth="200.0"/>
                <TableColumn fx:id="kolomSingkatan" text="Singkatan" prefWidth="100.0"/>
                <TableColumn fx:id="kolomDivisi" text="Divisi" prefWidth="150.0"/>
                <TableColumn fx:id="kolomUom" text="Satuan (UOM)" prefWidth="150.0"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>
                <Button fx:id="btnTambah" text="Tambah Produk" onAction="#tambahProduk"/>
                <Button fx:id="btnEdit" text="Edit Produk" onAction="#editProduk"/>
                <Button fx:id="btnHapus" text="Hapus Produk" onAction="#hapusProduk"/>
                <Button fx:id="btnRefresh" text="Refresh" onAction="#refreshData"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
