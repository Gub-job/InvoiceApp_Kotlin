<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" prefHeight="600.0" prefWidth="650.0"
    style="-fx-background-color: #f8fafc;"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.InputPembayaranController">
<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #f8fafc; -fx-padding: 20;">
    
    <Label text="Input Pembayaran Invoice" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
    
    <!-- Info Invoice -->
    <VBox spacing="8.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Informasi Invoice" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
        <Separator/>
        <HBox spacing="10.0">
            <Label text="Nomor Invoice:" style="-fx-font-weight: bold; -fx-min-width: 150;"/>
            <Label fx:id="nomorInvoiceLabel" style="-fx-text-fill: #1e293b;"/>
        </HBox>
        <HBox spacing="10.0">
            <Label text="Pelanggan:" style="-fx-font-weight: bold; -fx-min-width: 150;"/>
            <Label fx:id="pelangganLabel" style="-fx-text-fill: #1e293b;"/>
        </HBox>
        <HBox spacing="10.0">
            <Label text="Total Invoice:" style="-fx-font-weight: bold; -fx-min-width: 150;"/>
            <Label fx:id="totalInvoiceLabel" style="-fx-text-fill: #1e293b; -fx-font-weight: bold;"/>
        </HBox>
        <HBox spacing="10.0">
            <Label text="Sudah Dibayar:" style="-fx-font-weight: bold; -fx-min-width: 150;"/>
            <Label fx:id="sudahDibayarLabel" style="-fx-text-fill: #10b981; -fx-font-weight: bold;"/>
        </HBox>
        <HBox spacing="10.0">
            <Label text="Sisa Piutang:" style="-fx-font-weight: bold; -fx-min-width: 150;"/>
            <Label fx:id="sisaPiutangLabel" style="-fx-text-fill: #dc2626; -fx-font-weight: bold; -fx-font-size: 18px;"/>
        </HBox>
    </VBox>
    
    <!-- Form Input -->
    <VBox spacing="12.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Data Pembayaran" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
        <Separator/>
        
        <VBox spacing="5.0">
            <Label text="Tanggal Bayar:" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="tanggalBayarPicker" prefWidth="Infinity"/>
        </VBox>
        
        <VBox spacing="5.0">
            <Label text="Jumlah Bayar:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="jumlahBayarField" promptText="Masukkan jumlah pembayaran"/>
            <Label fx:id="validasiLabel" style="-fx-text-fill: #dc2626; -fx-font-size: 12px;" visible="false"/>
        </VBox>
        
        <VBox spacing="5.0">
            <Label text="Keterangan (Opsional):"/>
            <TextArea fx:id="keteranganArea" promptText="Contoh: Transfer BCA, Tunai, dll" prefHeight="60.0"/>
        </VBox>
    </VBox>
    
    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="simpanBtn" text="ðŸ’¾ Simpan Pembayaran" onAction="#onSimpanClicked"
            style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="batalBtn" text="âœ– Batal" onAction="#onBatalClicked"
            style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- History Pembayaran -->
    <VBox spacing="8.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <Label text="Riwayat Pembayaran" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
        <Separator/>
        <TableView fx:id="historyTable" prefHeight="180.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="kolomTanggal" text="Tanggal" prefWidth="120"/>
                <TableColumn fx:id="kolomJumlah" text="Jumlah" prefWidth="150"/>
                <TableColumn fx:id="kolomKeterangan" text="Keterangan" prefWidth="250"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
</ScrollPane>
