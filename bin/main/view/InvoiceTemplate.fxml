<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<AnchorPane fx:id="templateRoot" prefHeight="842.0" prefWidth="595.0"
    style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.template.InvoiceTemplateController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" prefHeight="782.0" prefWidth="535.0" spacing="15.0"
            AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0"
            AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <ImageView fx:id="logoImageView" fitHeight="60.0" fitWidth="60.0" preserveRatio="true" visible="false"/>
                    <Label fx:id="documentTypeLabel" alignment="CENTER" contentDisplay="CENTER"
                        prefHeight="35.0" prefWidth="547.0" text="INVOICE" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                </HBox>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label fx:id="nomorDokumenLabel" text="No: INV/2023/XII/001" />
                        <Label fx:id="tanggalDokumenLabel" text="Tanggal: 25 Desember 2023"
                            GridPane.columnIndex="1" />
                        <Label fx:id="contractRefLabel" text="Contract Ref: -" GridPane.rowIndex="1" />
                        <Label fx:id="contractDateLabel" text="Contract Date: -"
                            GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Kepada:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <VBox style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 5;">
                            <children>
                                <Label fx:id="namaPelangganLabel" text="Nama Pelanggan PT ABC" />
                                <Label fx:id="alamatPelangganLabel" text="Alamat Pelanggan Lengkap" />
                                <Label fx:id="teleponPelangganLabel" text="Telp: 08123456789" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <TableView fx:id="itemsTable" prefHeight="350.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="noCol" prefWidth="40.0" text="No" />
                        <TableColumn fx:id="namaProdukCol" prefWidth="170.0" text="Nama Produk" />
                        <TableColumn fx:id="uomCol" prefWidth="60.0" text="UOM" />
                        <TableColumn fx:id="qtyCol" prefWidth="60.0" text="Qty" />
                        <TableColumn fx:id="hargaCol" prefWidth="100.0" text="Harga" />
                        <TableColumn fx:id="totalCol" prefWidth="100.0" text="Total" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <GridPane alignment="TOP_RIGHT">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Subtotal:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="subtotalLabel" alignment="CENTER_RIGHT" prefHeight="17.0"
                            prefWidth="277.0" text="Rp 10.000.000" GridPane.columnIndex="1">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="DP Amount:" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="dpLabel" alignment="CENTER_RIGHT" prefHeight="17.0"
                            prefWidth="277.0" text="Rp 0" GridPane.columnIndex="1"
                            GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="PPN:" GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="ppnLabel" alignment="CENTER_RIGHT" prefHeight="17.0"
                            prefWidth="277.0" text="Rp 1.100.000" GridPane.columnIndex="1"
                            GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="Grand Total:" GridPane.rowIndex="3">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="grandTotalLabel" alignment="CENTER_RIGHT" prefHeight="17.0"
                            prefWidth="277.0" text="Rp 11.100.000" GridPane.columnIndex="1"
                            GridPane.rowIndex="3">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="200.0" />
                    </VBox.margin>
                </GridPane>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                            <children>
                                <Label fx:id="companyNameLabel" text="Nama Perusahaan">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="ownerNameLabel" text="Nama Pemilik" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets top="60.0" />
                                    </VBox.margin>
                                </Label>
                                <Label fx:id="ownerPositionLabel" text="Jabatan" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>