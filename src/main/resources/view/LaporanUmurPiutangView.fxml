<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LaporanUmurPiutangController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Laporan Umur Piutang">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Tanggal Laporan:" />
            <DatePicker fx:id="tanggalLaporanPicker" />
            <Button onAction="#onRefreshClicked" text="Refresh" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <!-- Summary Panel -->
      <GridPane hgap="10.0" vgap="5.0" styleClass="summary-panel">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox alignment="CENTER" styleClass="summary-box">
               <children>
                  <Label text="Current (0-30 hari)" styleClass="summary-label" />
                  <Label fx:id="current30Label" text="0.00" styleClass="summary-value" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="1">
               <children>
                  <Label text="31-60 hari" styleClass="summary-label" />
                  <Label fx:id="hari3160Label" text="0.00" styleClass="summary-value" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="2">
               <children>
                  <Label text="61-90 hari" styleClass="summary-label" />
                  <Label fx:id="hari6190Label" text="0.00" styleClass="summary-value" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="summary-box" GridPane.rowIndex="1">
               <children>
                  <Label text="91-120 hari" styleClass="summary-label" />
                  <Label fx:id="hari91120Label" text="0.00" styleClass="summary-value" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="> 120 hari" styleClass="summary-label" />
                  <Label fx:id="lebih120Label" text="0.00" styleClass="summary-value" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="summary-box total-box" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <children>
                  <Label text="TOTAL PIUTANG" styleClass="summary-label" />
                  <Label fx:id="totalPiutangLabel" text="0.00" styleClass="summary-value total-value" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>

      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button onAction="#onExportExcelClicked" text="Export Excel" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>

      <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="kolomPelanggan" prefWidth="150.0" text="Pelanggan" />
            <TableColumn fx:id="kolomNomor" prefWidth="120.0" text="No. Invoice" />
            <TableColumn fx:id="kolomTanggal" prefWidth="100.0" text="Tanggal" />
            <TableColumn fx:id="kolomTotal" prefWidth="100.0" text="Total" />
            <TableColumn fx:id="kolomDibayar" prefWidth="100.0" text="Dibayar" />
            <TableColumn fx:id="kolomSisa" prefWidth="100.0" text="Sisa" />
            <TableColumn fx:id="kolomUmur" prefWidth="80.0" text="Umur" />
            <TableColumn fx:id="kolomKategori" prefWidth="120.0" text="Kategori" />
         </columns>
      </TableView>
   </children>
</VBox>